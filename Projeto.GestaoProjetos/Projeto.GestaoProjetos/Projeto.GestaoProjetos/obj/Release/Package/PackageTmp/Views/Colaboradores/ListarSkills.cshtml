@model IEnumerable<Projeto.GestaoProjetos.Models.Skill>

@{
    ViewBag.Title = "ListarSkills";
}

<h2 class="text-center">Listar - Skills</h2>

<p class="btn btn-info">
    @Html.ActionLink("Incluir Skill", "IncluirSkills", "Colaboradores", new { @class = "btn", style = "text-decoration: none; color: white;" })

</p>
<br />
<br />
@if(Model.Count() > 0){
<table class="table table-bordered tables">
    <tr>
        @*<th>
                @Html.DisplayNameFor(model => model.IDSKILL)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nivel)
        </th>
        <th>Opções:</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IDSKILL)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel)
            </td>
            <td>
                @Html.ActionLink(" ", "AlterarSkill", new { id = item.IDSKILL }, new { @class = "btn btn-warning glyphicon glyphicon-wrench", style = "color:000; margin-right:10px;", title = "Alterar" })
                @Html.ActionLink(" ", "ExcluirSkill", new { id = item.IDSKILL }, new { @class = "btn btn-danger glyphicon glyphicon-remove", style = "color:000; margin-right:3px;", title = "Excluir" })

            </td>
        </tr>
    }

</table>
}
  else
    {
<span class="col-md-12 alert alert-danger">Não há Skills cadastradas</span>
    }
<div>
    @Html.ActionLink("Voltar", "Index", "Colaboradores", new { @class = "btn btn-info" })
</div>

